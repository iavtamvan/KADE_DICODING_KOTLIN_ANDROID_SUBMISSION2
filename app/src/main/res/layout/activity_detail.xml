<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_detail_tanggal"
            android:layout_marginTop="5dp"
            android:textColor="#faaf19"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sab, 03 Mar 2018"/>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img_home"
                android:layout_width="50dp"
                android:layout_height="50dp" />
            <TextView
                android:id="@+id/tv_detail_score_home"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="40sp"
                android:textStyle="bold"
                android:text="2"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="VS"/>
            <TextView
                android:textStyle="bold"
                android:id="@+id/tv_detail_score_away"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="40sp"
                android:text="0" />
            <ImageView
                android:layout_marginLeft="20dp"
                android:id="@+id/img_away"
                android:layout_width="50dp"
                android:layout_height="50dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_detail_team_home"
                    android:layout_marginTop="5dp"
                    android:textColor="#faaf19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Arsenal"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/tv_formasi_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4-3-3"
                    android:textSize="20sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginRight="10dp"
                android:gravity="right"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_detail_team_away"
                    android:layout_marginTop="5dp"
                    android:textColor="#faaf19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Arsenal"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/tv_formasi_away"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4-3-3"
                    android:textSize="20sp"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_marginTop="5dp"
            android:textColor="#faaf19"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Goals"
            android:textSize="18sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_goal_home"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ozil"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/tv_goal_away"
                android:gravity="right"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ozil"
                android:textSize="18sp"/>
        </LinearLayout>
        <TextView
            android:layout_marginTop="5dp"
            android:textColor="#faaf19"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shots"
            android:textSize="18sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_shots_home"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/tv_shots_away"
                android:gravity="right"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textSize="18sp"/>
        </LinearLayout>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lineups"
            android:textSize="18sp"/>
        <TextView
            android:layout_marginTop="5dp"
            android:textColor="#faaf19"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Goal keeper"
            android:textSize="18sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_keeper_home"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ozil"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/tv_keeper_away"
                android:gravity="right"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ozil"
                android:textSize="18sp"/>
        </LinearLayout>
        <TextView
            android:layout_marginTop="5dp"
            android:textColor="#faaf19"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Defender"
            android:textSize="18sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_defend_home"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ozil"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/tv_defend_away"
                android:gravity="right"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ozil"
                android:textSize="18sp"/>
        </LinearLayout>
        <TextView
            android:layout_marginTop="5dp"
            android:textColor="#faaf19"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Midle"
            android:textSize="18sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_midle_home"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ozil"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/tv_midle_away"
                android:gravity="right"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ozil"
                android:textSize="18sp"/>
        </LinearLayout>
        <TextView
            android:layout_marginTop="5dp"
            android:textColor="#faaf19"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forward"
            android:textSize="18sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_forward_home"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ozil"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/tv_forward_away"
                android:gravity="right"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ozil"
                android:textSize="18sp"/>
        </LinearLayout>
    </LinearLayout>


</ScrollView>